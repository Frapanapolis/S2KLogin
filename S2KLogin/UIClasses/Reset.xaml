         			<RowDefinition Height="250" />
		 	</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
    				<ColumnDefinition Width="*" />
    			</Grid.ColumnDefinitions>
  						<Button Text="Initialize" BackgroundColor="#333333" Grid.Row="2" Grid.ColumnSpan="2" HeightRequest="35" WidthRequest="150" HorizontalOptions="CenterAndExpand" TextColor="White" VerticalOptions="Start"    />
