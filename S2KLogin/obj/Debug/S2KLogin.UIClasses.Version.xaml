<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
		 BackgroundColor="#63B1C1"
x:Class="S2KLogin.Version"
		 Title = "Application Version">
	<ContentPage.Content>
		
 		<Grid>	
			 
			<Grid Padding="0,50,0,0" >
         		<Grid.RowDefinitions>
         			<RowDefinition Height="75" />
		 			<RowDefinition Height="35" />
					<RowDefinition Height="35" />
					<RowDefinition Height="35" />
					<RowDefinition Height="35" />
					<RowDefinition Height="35" />	
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
    				<ColumnDefinition Width="*" />
    				<ColumnDefinition Width="80" />
					<ColumnDefinition Width="80" />
    				<ColumnDefinition Width="80" />
    				<ColumnDefinition Width="*" />
					
 				</Grid.ColumnDefinitions>
					<Image Source="version_mark.png" Grid.Column="1" Grid.Row="0" Scale="1.5" Grid.ColumnSpan="3" Grid.RowSpan="2" HorizontalOptions="Center" VerticalOptions="Center"/>
					<Label FontAttributes="Bold" Text="Version 1.0.0"   Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" FontSize="15" HorizontalTextAlignment="Center" VerticalOptions="StartAndExpand" TextColor="Gray"></Label>
 
   						 
 
					
					<Label FontAttributes="Bold" Text="Check For Updates" TextColor="Gray" Grid.Row="4" Grid.ColumnSpan="3" Grid.Column="1" FontSize="15" HorizontalOptions="Center" VerticalOptions="End" ></Label>
 					<Button Text="Update" BackgroundColor="#333333" Grid.Row="5" Grid.ColumnSpan="3" Grid.Column="1" HeightRequest="35" WidthRequest="150" HorizontalOptions="CenterAndExpand" TextColor="White" VerticalOptions="Start"    />
			</Grid>


			 
				  
			 
		</Grid>
	</ContentPage.Content>
</ContentPage>
